html
    head
        meta(charset="utf-8")
        title BackBone 例子
        link(ref="stylesheet",type="text/css",href="/css/base.css")
        link(rel="stylesheet",href="http://cdn.bootcss.com/twitter-bootstrap/3.0.3/css/bootstrap.min.css")
        link(rel="stylesheet",href="http://cdn.bootcss.com/twitter-bootstrap/3.0.3/css/bootstrap-theme.min.css")
        script(src="/plugin/jquery-1.11.0.min.js",type="text/javascript")
        script(src="http://cdn.bootcss.com/twitter-bootstrap/3.0.3/js/bootstrap.min.js")
        script(src="/plugin/underscore.js",type="text/javascript")
        script(src="/plugin/backbone.js",type="text/javascript")
        script(src="/javascript/backbone/user/user.js",type="text/javascript")
    body
        div.view.container
            button.btn.btn-primary.add-user(data-toggle="modal",data-target="#user") 新增用户
            table.table.table-hover
                thead
                    tr
                        th #
                        th 名字
                        th 年龄
                        th 性别
                        th 操作
                tbody.view-item

        div.modal.fade#user(role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")


        script(id="user-template",type="text/template").
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">
                        <%if(name == ""){%>
                           新增
                        <%}else{%>
                           修改
                        <%}%>
                        </h4>
                    </div>
                    <div class="modal-body">
                        <form role="form">
                            <div class="form-group">
                                <label>名字:</label>
                                <input class="form-control" name="name" type="text" value="<%=name%>">
                            </div>
                            <div class="form-group">
                                <label>年龄:</label>
                                <input class="form-control" name="age" type="text" value="<%=age%>">
                            </div>
                            <div class="form-group">
                                <label>性别:</label>
                                <%if(sex == 1){%>
                                    <div class="radio">
                                        <input type="radio" name="sex"  value="1" checked> 男
                                    </div>
                                    <div class="radio">
                                        <input type="radio" name="sex"  value="2"> 女
                                    </div>
                                <%}else{%>
                                    <div class="radio">
                                        <input type="radio" name="sex"  value="1"> 男
                                    </div>
                                    <div class="radio">
                                        <input type="radio" name="sex"  value="2" checked> 女
                                    </div>
                                <%}%>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary btn-sm submit">确定</button>
                    </div>
                </div>

        script(id="user-list-template",type="text/template").
            <td>#</td>
            <td><%=name%></td>
            <td><%=age%></td>
            <td><%= sex == 1 ? '男' : '女'%></td>
            <td><button class="btn btn-primary btn-sm update">编辑</button><button class="btn btn-primary btn-sm del">删除</button></td>