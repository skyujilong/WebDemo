doctype
html
    head
        meta(charset="utf-8")
        title BackBone 基本例子
        link(rel="stylesheet",type="text/css",href="/css/base.css")
        script(src="/plugin/jquery-1.11.0.min.js",type="text/javascript")
        script(src="/plugin/underscore.js",type="text/javascript")
        script(src="/plugin/backbone.js",type="text/javascript")
        script(src="/javascript/backbone/base/base.js",type="text/javascript")
    body
        div
            div.user
            ul.list
        //这里用的是underscore的模版
        script(type="text/template",id="user-list-template").
            <li id="<%=cid%>">
                <span>名字：<%=name%></span>
                <span>年龄：<%=age%></span>
                <span>性别：<%= sex == 1 ? "男" : "女"%></span>
                <span><a class="add" href="javascript:void(0);">编辑</a></span>
            </li>


        script(type='text/template',id="user").
            <table>
                <tr>
                    <td>
                        名字：
                    </td>
                    <td>
                        <input name="name" type="text" value="<%=name%>"/>
                    </td>
                    <td>
                        年龄：
                    </td>
                    <td>
                        <input name="age" type="text" value="<%=age%>"/>
                    </td>
                    <td>
                        性别：
                    </td>
                    <td>
                        <select name="sex">
                        <%if(sex == 1){%>
                            <option value="1" selected>男</option>
                            <option value="2">女</option>
                        <%}else if(sex == 2){%>
                            <option value="1">男</option>
                            <option value="2" selected>女</option>
                        <%}else{%>
                            <option value="1">男</option>
                            <option value="2">女</option>
                        <%}%>
                        </select>
                    </td>
                    <td>
                        <input class="modify" type="button" value="<%= !name ? "增加":"修改" %>"/>
                    </td>
                </tr>
            </table>

